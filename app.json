{
  "id": "com.arjankranenburg.virtual",
  "version": "0.6.0",
  "compatibility": "1.x >=1.5.0",
  "sdk": 2,
  "description": "Virtual Devices to trigger your flows from the GUI.",
  "name": {
    "en": "Virtual Devices",
    "nl": "Virtuele Apparaten"
  },
  "tags": {
    "en": [
      "virtual device"
    ],
    "nl": [
      "Virtuele Apparaten"
    ]
  },
  "author": {
    "name": "Arjan Kranenburg",
    "email": "arjan.kranenburg@gmail.com"
  },
  "contributors": {
    "developers": [
      {
        "name": "Arjan Kranenburg",
        "email": "arjan.kranenburg@gmail.com"
      }
    ],
    "graphical designer": [
      {
        "name": "ZperX"
      }
    ]
  },
  "images": {
    "large": "./assets/images/large.png",
    "small": "./assets/images/small.png"
  },
  "category": "tools",
  "flow": {
    "triggers": [
      {
        "id": "press",
        "title": {
          "en": "Pressed / changed",
          "nl": "Ingedrukt / veranderd"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=virtual_switch"
          }
        ]
      },
      {
        "id": "mode_on",
        "title": {
          "en": "Mode is on",
          "nl": "Modus wordt aangezet"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=mode"
          }
        ]
      },
      {
        "id": "mode_off",
        "title": {
          "en": "Mode is off",
          "nl": "Modus wordt uitgezet"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=mode"
          }
        ]
      }
    ],
    "conditions": [
      {
        "id": "mode",
        "title": {
          "en": "Mode !{{is|isn't}} turned on",
          "nl": "Modus !{{is|is niet}} aangezet"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=mode"
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "mode_action_on",
        "title": {
          "en": "Turn mode on",
          "nl": "Zet modus aan"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=mode"
          }
        ]
      },
      {
        "id": "mode_action_off",
        "title": {
          "en": "Turn mode off",
          "nl": "Zet modus uit"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=mode"
          }
        ]
      },
      {
        "id": "button_action_pushed",
        "title": {
          "en": "Push button",
          "nl": "Druk op de knop"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=button"
          }
        ]
      }
    ]
  },
  "drivers": [
    {
      "id": "virtual_switch",
      "name": {
        "en": "Device",
        "nl": "Apparaat"
      },
      "images": {
        "large": "drivers/virtual_switch/assets/images/large.png",
        "small": "drivers/virtual_switch/assets/images/small.png"
      },
      "class": "other",
      "capabilities": [
        "onoff",
        "button"
      ],
      "pair": [
        {
          "id": "start"
        },
        {
          "id": "add_switches",
          "template": "add_devices"
        }
      ]
    },
    {
      "id": "mode",
      "name": {
        "en": "Mode",
        "nl": "Modus"
      },
      "images": {
        "large": "drivers/mode/assets/images/large.png",
        "small": "drivers/mode/assets/images/small.png"
      },
      "class": "other",
      "capabilities": [
        "onoff"
      ],
      "pair": [
        {
          "id": "start"
        },
        {
          "id": "add_mode",
          "template": "add_devices"
        }
      ],
      "mobile": {
        "components": [
          {
            "id": "icon",
            "capabilities": [
              "onoff"
            ]
          },
          {
            "id": "toggle",
            "capabilities": [
              "onoff"
            ]
          }
        ]
      }
    }
  ]
}
