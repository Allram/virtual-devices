{
  "id": "com.arjankranenburg.virtual",
  "version": "0.6.4",
  "compatibility": "1.x >=1.5.0",
  "sdk": 2,
  "description": "Virtual Devices to trigger your flows from the GUI.",
  "name": {
    "en": "Virtual Devices",
    "nl": "Virtuele Apparaten"
  },
  "tags": {
    "en": [
      "virtual device"
    ],
    "nl": [
      "Virtuele Apparaten"
    ]
  },
  "author": {
    "name": "Arjan Kranenburg",
    "email": "arjan.kranenburg@gmail.com"
  },
  "contributors": {
    "developers": [
      {
        "name": "Arjan Kranenburg",
        "email": "arjan.kranenburg@gmail.com"
      }
    ],
    "graphical designer": [
      {
        "name": "ZperX"
      }
    ]
  },
  "images": {
    "large": "./assets/images/large.png",
    "small": "./assets/images/small.png"
  },
  "category": "tools",
  "capabilities": {
    "alarm_state": {
      "type": "enum",
      "title": {
        "en": "Alarm states",
        "nl": "Alarm statuses"
      },
      "getable": true,
      "setable": true,
      "values": [
        {
          "id": "armed",
          "title": {
            "en": "Armed",
            "nl": "Geactiveerd"
          }
        },
        {
          "id": "guard",
          "title": {
            "en": "Guard",
            "nl": "Bewaakt"
          }
        },
        {
          "id": "disarmed",
          "title": {
            "en": "Disarmed",
            "nl": "Uitgeschakeld"
          }
        },
        {
          "id": "alarm",
          "title": {
            "en": "Alarm",
            "nl": "Alarm"
          }
        }
      ]
    }
  },
  "flow": {
    "triggers": [
      {
        "id": "press",
        "title": {
          "en": "Pressed / changed",
          "nl": "Ingedrukt / veranderd"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=virtual_switch"
          }
        ]
      },
      {
        "id": "mode_on",
        "title": {
          "en": "Mode is on",
          "nl": "Modus wordt aangezet"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=mode"
          }
        ]
      },
      {
        "id": "mode_off",
        "title": {
          "en": "Mode is off",
          "nl": "Modus wordt uitgezet"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=mode"
          }
        ]
      },
      {
        "id": "mode_changed",
        "title": {
          "en": "Mode Changed",
          "nl": "Modus Veranderd"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=mode"
          }
        ]
      },
      {
        "id": "alarm_state_is",
        "title": {
          "en": "Alarm state is",
          "nl": "Alarm status is"
        },
        "args": [
          {
            "type": "dropdown",
            "name": "alarm_state",
            "values": [
              {
                "id": "armed",
                "label": {
                  "en": "Armed",
                  "nl": "Geactiveerd"
                }
              },
              {
                "id": "guard",
                "label": {
                  "en": "Guard",
                  "nl": "Bewaakt"
                }
              },
              {
                "id": "disarmed",
                "label": {
                  "en": "Disarmed",
                  "nl": "Uitgeschakeld"
                }
              },
              {
                "id": "alarm",
                "label": {
                  "en": "Alarm",
                  "nl": "Alarm"
                }
              }
            ]
          },
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=virtual_switch"
          }
        ]
      }
    ],
    "conditions": [
      {
        "id": "mode",
        "title": {
          "en": "Mode !{{is|isn't}} turned on",
          "nl": "Modus !{{is|is niet}} aangezet"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=mode"
          }
        ]
      },
      {
        "id": "alarm_state",
        "title": {
          "en": "Alarm state !{{is|isn't}}",
          "nl": "Alarm Status !{{is|is niet}}"
        },
        "args": [
          {
            "type": "dropdown",
            "name": "alarm_state",
            "values": [
              {
                "id": "armed",
                "label": {
                  "en": "Armed",
                  "nl": "Geactiveerd"
                }
              },
              {
                "id": "guard",
                "label": {
                  "en": "Guard",
                  "nl": "Bewaakt"
                }
              },
              {
                "id": "disarmed",
                "label": {
                  "en": "Disarmed",
                  "nl": "Uitgeschakeld"
                }
              },
              {
                "id": "alarm",
                "label": {
                  "en": "Alarm",
                  "nl": "Alarm"
                }
              }
            ]
          },
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=virtual_switch"
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "mode_action_on",
        "title": {
          "en": "Turn mode on",
          "nl": "Zet modus aan"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=mode"
          }
        ]
      },
      {
        "id": "mode_action_off",
        "title": {
          "en": "Turn mode off",
          "nl": "Zet modus uit"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=mode"
          }
        ]
      },
      {
        "id": "mode_state_on",
        "title": {
          "en": "Set mode on, no trigger",
          "nl": "Zet modus aan zonder trigger"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=mode"
          }
        ]
      },
      {
        "id": "mode_state_off",
        "title": {
          "en": "Set mode off, no trigger",
          "nl": "Zet modus uit zonder trigger"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=mode"
          }
        ]
      },
      {
        "id": "set_alarm_state",
        "title": {
          "en": "Set Alarm state",
          "nl": "Zet Alarm status"
        },
        "args": [
          {
            "type": "dropdown",
            "name": "alarm_state",
            "values": [
              {
                "id": "armed",
                "label": {
                  "en": "Armed",
                  "nl": "Geactiveerd"
                }
              },
              {
                "id": "guard",
                "label": {
                  "en": "Guard",
                  "nl": "Bewaakt"
                }
              },
              {
                "id": "disarmed",
                "label": {
                  "en": "Disarmed",
                  "nl": "Uitgeschakeld"
                }
              },
              {
                "id": "alarm",
                "label": {
                  "en": "Alarm",
                  "nl": "Alarm"
                }
              }
            ]
          },
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=virtual_switch"
          }
        ]
      }
    ]
  },
  "drivers": [
    {
      "id": "virtual_switch",
      "name": {
        "en": "Device",
        "nl": "Apparaat"
      },
      "images": {
        "large": "drivers/virtual_switch/assets/images/large.png",
        "small": "drivers/virtual_switch/assets/images/small.png"
      },
      "class": "other",
      "capabilities": [
        "onoff"
      ],
      "pair": [
        {
          "id": "start"
        },
        {
          "id": "add_switches",
          "template": "add_devices"
        }
      ]
    },
    {
      "id": "mode",
      "name": {
        "en": "Mode",
        "nl": "Modus"
      },
      "images": {
        "large": "drivers/mode/assets/images/large.png",
        "small": "drivers/mode/assets/images/small.png"
      },
      "class": "other",
      "capabilities": [
        "onoff"
      ],
      "pair": [
        {
          "id": "start"
        },
        {
          "id": "add_mode",
          "template": "add_devices"
        }
      ],
      "mobile": {
        "components": [
          {
            "id": "icon",
            "capabilities": [
              "onoff"
            ]
          },
          {
            "id": "toggle",
            "capabilities": [
              "onoff"
            ]
          }
        ]
      }
    }
  ]
}
